            "url": "{{baseUrl}}/comment/lessons/1/comments",
            "body": { "mode": "raw", "raw": "{\n  \"author\": \"User Two\",\n  \"content\": \"I agree!\",\n  \"parentId\": 1\n}" }
          }
        }
      ]
    },
    {
      "name": "Enrollments",
      "item": [
        {
          "name": "Enroll",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/enrollments",
            "body": { "mode": "raw", "raw": "{\n  \"userId\": 1,\n  \"courseId\": 1\n}" }
          }
        },
        {
          "name": "Unenroll",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/enrollments",
            "body": { "mode": "raw", "raw": "{\n  \"userId\": 1,\n  \"courseId\": 1\n}" }
          }
        },
        { "name": "List User Enrollments", "request": { "method": "GET", "url": "{{baseUrl}}/enrollments/users/1" } }
      ]
    },
    {
      "name": "Progress",
      "item": [
        {
          "name": "Upsert Progress",
          "request": {
            "method": "PUT",
